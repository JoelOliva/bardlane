@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control"/>
                <label asp-for="Input.UserName" class="form-label"></label>
            </div>
            <input type="checkbox" id="name"/>
            <label for="name">Use name as my display name</label>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control"/>
                <label asp-for="Input.Name" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Input.AboutMe" class="form-control"></textarea>
                <label asp-for="Input.AboutMe" class="form-label">About Me</label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
	<input type="file" id="file" name="file" class="d-none" accept="image/png, image/jpg">
    <div class="col-md-6"><img id="avatar" class="d-block mx-auto" src="@Url.Content(Model.PicturePath)" alt="Profile icon"/></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/manage.js"></script>
}
